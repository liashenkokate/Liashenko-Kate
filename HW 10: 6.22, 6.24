#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <string.h>

void do_24() {
    int x;
    printf("Please enter x.\n");
    scanf("%d", &x);

    int min_p = -1, max_p = 0;
    for (int i = 0; i < 32; i++) {
        int b = (x >> i) & 1;
        if (b == 1) {
            if (min_p == -1) {
                min_p = i;
            }
            max_p = i;
        }

        // check
        printf("%d", b);
    }
    printf("\nlowest=%d highest=%d\n", min_p, max_p);
}

void do_22() {
    int x, k;
    printf("Please enter x.\n");
    scanf("%d", &x);
    printf("Please enter k.\n");
    scanf("%d", &k);

    for (int i = k; i < 32; i++) {
        x |= 1UL << i;
    }

    // check
    for (int i = 0; i < 32; i++) {
        int b = (x >> i) & 1;
        printf("%d", b);
    }

    printf("\nn=%d\n", x);
}

int main() {
//   do_24();
    do_22();
    return 0;
}
