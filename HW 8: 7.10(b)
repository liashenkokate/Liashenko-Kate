#include "iostream"
using namespace std;

int main (){
    int n;
    cin >>n;
    int arr[n];
    for (int i = 0 ; i <n ; i ++){
        cin>>arr[i];
    }
    int arr_new[n];

    for (int i = 1;i<n;i++){
        arr_new[i-1] = arr[i]+arr[i-1];
        printf("%d + %d = %d \n",arr[i-1],arr[i],arr_new[i-1]);
    }
    int min = arr_new[0];
    for (int i = 0 ; i < n-1;i++){
        if (arr_new[i]<min) {
        min = arr_new[i];
        }
    }
    cout<<"min = "<<min<<endl;
    return 0;
}
