#include <stdio.h>
#include <math.h>

double func1(const double x, const unsigned n) {
    double y = 0;
    double t = 1;
    for (unsigned i = 0; i <= n; i++) {
        y += t;
        t *= x;
    }
    return y;
}
double func2(const unsigned n, const double x, const double y) {
    double res = 0;
    double x1 = 1;
    double y1 = 1;
    for (unsigned i = 0; i <= n; i++) {
        res += x1 * y1;
        x1 *= x * x;
        y1 *= y;
    }
    return res;
}
unsigned func(const unsigned n) {
    unsigned res = 1;
    for (unsigned i = n; i > 0; i -= 2)
        res *= i;
    return res;
}
